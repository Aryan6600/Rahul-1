doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/dist/css/sitem.css")
        title Document
    body 
        form(action='/store/search' method="GET").search 
                    input(type="text", name="q" placeholder="Search Anything")
                    input(type="submit", value="Search").button
        nav#navbar.navbar.shadow-on-scroll
            h1.navbar-brand Aryan
            .navbar-toggler(data-toggle='nav')
                .line
                .line
                .line
            #nav.collapse
                ul.navbar-nav
                    li
                        a(href='/') Home
                    li
                        a.btn.modal-toggler(data-toggle='appointment') Buy

        .content 
            .top 
                img(src="/dist/img/"+app.thumbnail, alt="")
                .top-content 
                    h2=app.title
                    span=app.type
                    a.btn(href=app.downloadUrl target="blank") Download 
            .bottom 
                h2 About the Application
                p=app.description 
        script(src="/dist/js/1.js") 